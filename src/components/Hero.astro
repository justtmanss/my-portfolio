<style>
  @keyframes slide {
    0% { transform: translateX(-100px); }
    100% { transform: translateX(100px); }
  }
  
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }
  
  .animate-slide {
    animation: slide 3s ease-in-out infinite;
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
  
  .typing-effect {
    overflow: hidden;
    white-space: nowrap;
    animation: typing 2s steps(40) 1s both;
  }
  
  /* Individual letter hover effects - Responsive */
  #interactive-name-mobile span:hover,
  #interactive-name-tablet span:hover,
  #interactive-name-desktop span:hover {
    color: #fff;
    text-shadow: 0 0 20px currentColor;
    transform: scale(1.2) rotate(5deg);
  }
  
  /* Touch devices - Add active states */
  @media (hover: none) and (pointer: coarse) {
    #interactive-name-mobile span:active,
    #interactive-name-tablet span:active,
    #interactive-name-desktop span:active {
      color: #fff;
      text-shadow: 0 0 20px currentColor;
      transform: scale(1.2) rotate(5deg);
    }
  }
  
  /* Name container hover effects - Responsive */
  #name-container:hover {
    filter: drop-shadow(0 0 20px rgba(129, 140, 248, 0.3));
  }
  
  @media (min-width: 640px) {
    #name-container:hover {
      filter: drop-shadow(0 0 30px rgba(129, 140, 248, 0.3));
    }
  }
  
  /* Sparkle animation for floating elements - Responsive */
  @keyframes sparkle-float {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-10px) rotate(180deg); opacity: 1; }
  }
  
  @media (min-width: 640px) {
    @keyframes sparkle-float {
      0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
      50% { transform: translateY(-15px) rotate(180deg); opacity: 1; }
    }
  }
  
  #name-container .absolute {
    animation: sparkle-float 3s ease-in-out infinite;
  }
  
  #name-container .absolute:nth-child(2) { animation-delay: 0.5s; }
  #name-container .absolute:nth-child(3) { animation-delay: 1s; }
  #name-container .absolute:nth-child(4) { animation-delay: 1.5s; }
  #name-container .absolute:nth-child(5) { animation-delay: 2s; }
  
  /* Responsive adjustments for smaller screens */
  @media (max-width: 639px) {
    .typing-effect {
      animation: typing 2s steps(20) 1s both;
    }
  }
  
  /* Prevent horizontal scroll on mobile */
  @media (max-width: 639px) {
    #name-container {
      max-width: calc(100vw - 2rem);
      overflow: hidden;
    }
  }
</style>

<script>
  // Animated rotating title
  const titles = [
    "Backend Builder",
    "AI Explorer", 
    "System Architect",
    "ML Engineer",
    "Code Craftsperson",
    "Tech Innovator",
    "A founder",
    "Full-Stack Developer"
  ];
  
  let currentIndex = 0;
  const titleElement = document.getElementById('rotating-title');
  
  function rotateTitle() {
    if (titleElement) {
      // Fade out
      titleElement.style.opacity = '0';
      titleElement.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        currentIndex = (currentIndex + 1) % titles.length;
        titleElement.textContent = titles[currentIndex];
        
        // Fade in
        titleElement.style.opacity = '1';
        titleElement.style.transform = 'translateY(0)';
      }, 300);
    }
  }
  
  // Start rotation after page load
  document.addEventListener('DOMContentLoaded', () => {
    if (titleElement) {
      titleElement.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      setInterval(rotateTitle, 3000); // Change every 3 seconds
    }
    
    // Add click/touch interaction to name
    const nameContainer = document.getElementById('name-container');
    if (nameContainer) {
      // Handle both click and touch events
      nameContainer.addEventListener('click', createNameClickEffect);
      nameContainer.addEventListener('touchend', (e) => {
        e.preventDefault();
        createNameClickEffect();
      });
    }
  });
  
  function createNameClickEffect() {
    const nameContainer = document.getElementById('name-container');
    const rect = nameContainer.getBoundingClientRect();
    const centerX = rect.left + rect.width / 2;
    const centerY = rect.top + rect.height / 2;
    
    // Adjust sparkle count based on screen size
    const sparkleCount = window.innerWidth < 640 ? 10 : 15;
    const spreadRadius = window.innerWidth < 640 ? 100 : 200;
    
    // Create multiple sparkles
    for (let i = 0; i < sparkleCount; i++) {
      setTimeout(() => {
        const sparkle = document.createElement('div');
        const colors = ['#818cf8', '#f472b6', '#2dd4bf', '#fbbf24'];
        const color = colors[Math.floor(Math.random() * colors.length)];
        const size = window.innerWidth < 640 ? 4 : 6;
        
        sparkle.style.cssText = `
          position: fixed;
          width: ${size}px;
          height: ${size}px;
          background: ${color};
          border-radius: 50%;
          pointer-events: none;
          z-index: 9999;
          left: ${centerX}px;
          top: ${centerY}px;
          animation: nameSparkle 1.5s ease-out forwards;
          --random-x: ${(Math.random() - 0.5) * spreadRadius}px;
          --random-y: ${(Math.random() - 0.5) * spreadRadius}px;
        `;
        
        document.body.appendChild(sparkle);
        setTimeout(() => sparkle.remove(), 1500);
      }, i * 50);
    }
  }
  
  // Add CSS for name sparkle animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes nameSparkle {
      0% {
        transform: translate(0, 0) scale(1);
        opacity: 1;
      }
      100% {
        transform: translate(var(--random-x), var(--random-y)) scale(0);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);
</script>